@model IEnumerable<Tartarus_final.Models.Obavijest>

@{
    ViewData["Title"] = "HomeAnnouncements";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Announcements</h1>

<div class=" mb-lg-3"></div>



    <!--Dont spam divs(Look up semantic code)-->
    <form asp-action="PretražiZatvorenike" method="post">
        <input type="text" name="searchNames" style="border-radius: 50px;  width: 80%; border-color: #d1d0d0;" />
        <input type="submit" value="Search" style="border-radius: 50px; border: none;" />
    </form>


<div class=" mb-lg-5"></div>
<div class="d-flex justify-content-center">
    <table class="table d-flex justify-content-center" style="border-color: #d1d0d0">
        <thead>
            <tr>
                <th style="text-align: center; background-color: #ffffff;">
                    Text
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td style="text-align: center; background-color: #ffffff;">
                        @Html.DisplayFor(modelItem => item.Tekst)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>