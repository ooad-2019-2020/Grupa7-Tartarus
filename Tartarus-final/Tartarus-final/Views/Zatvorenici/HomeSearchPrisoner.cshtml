
@model IEnumerable<Tartarus_final.Models.Zatvorenik>
@{
    ViewData["Title"] = "HomeSearchPrisoner";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Search prisoners</h1>

<div class=" mb-lg-3"></div>

<div class="d-flex justify-content-center">
    <form asp-controller="Zatvorenici" asp-action="HomeSearchPrisoner">
        <p style="font-size:large; align-items:center;">
            Enter prisoner name: <input type="text" name="SearchString" style="border-radius: 50px;  width: 80%; border: none;" />
            <input type="submit" value="Filter" style="border-radius: 50px; border: none;" />
        </p>
    </form>
</div>

    <div class=" mb-lg-5"></div>

    <table class="table  mb-lg-5">
        <thead>
            <tr>
                <th style="text-align: center; background-color: #ffffff;">
                    First name
                </th>
                <th style="text-align: center; background-color: #ffffff;">
                    Last name
                </th>
                <th style="text-align: center; background-color: #ffffff;">
                    Prison sentence
                </th>
                <th style="text-align: center; background-color: #ffffff;">
                    Prisoner evaluation
                </th>
                <th style="text-align: center; background-color: #ffffff;">
                    Jmbg
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td style="text-align: center; background-color: #ffffff;">
                    @Html.DisplayFor(modelItem => item.Ime)
                </td>
                <td style="text-align: center; background-color: #ffffff;">
                    @Html.DisplayFor(modelItem => item.Prezime)
                </td>
                <td style="text-align: center; background-color: #ffffff;">
                    @Html.DisplayFor(modelItem => item.ZatvorskaKazna)
                </td>
                <td style="text-align: center; background-color: #ffffff;">
                    @Html.DisplayFor(modelItem => item.Evaluacija)
                </td>
                <td style="text-align: center; background-color: #ffffff;">
                    @Html.DisplayFor(modelItem => item.Jmbg)
                </td>
            </tr>
            }
        </tbody>
    </table>

